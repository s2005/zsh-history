{
    "id": "zsh-history-volume",
    "version": "1.0.0",
    "name": "Persistent Zsh History (Volume Mount)",
    "description": "Configures persistent Zsh history in a dev container using a volume mount.",
    "documentationURL": "https://github.com/s2005/zsh-history",
    "options": {
        "username": {
            "type": "string",
            "default": "",
            "description": "Username for whom to configure zsh history (default is the remote user)"
        },
        "historyPath": {
            "type": "string",
            "default": "/commandhistory",
            "description": "Path inside the container where the history will be stored"
        },
        "volumeName": {
            "type": "string",
            "default": "zsh-history-volume",
            "description": "Name of the Docker volume to use for history storage"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "dependsOn": {
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {}
    },
    "mounts": [
        {
            "source": "${options.volumeName}",
            "target": "${options.historyPath}",
            "type": "volume"
        }
    ],
    "containerEnv": {
        "ZSH_HISTORY_PATH": "${options.historyPath}"
    }
}
