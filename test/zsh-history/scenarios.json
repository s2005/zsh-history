{
    "default": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "zsh-history": {}
        },
        "mounts": [
            "source=zsh-history,target=/commandhistory,type=volume"
        ]
    },
    "debian": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "zsh-history": {}
        },
        "mounts": [
            "source=debian,target=/commandhistory,type=volume"
        ]
    },
    "alpine": {
        "image": "mcr.microsoft.com/devcontainers/base:alpine",
        "features": {
            "zsh-history": {}
        },
        "mounts": [
            "source=alpine,target=/commandhistory,type=volume"
        ]
    },
    "vscode": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "zsh-history": {}
        },
        "mounts": [
            "source=vscode,target=/commandhistory,type=volume"
        ],
        "remoteUser": "vscode"
    },
    "common-utils-vscode": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:2": {
                "username": "vscode"
            },
            "zsh-history": {}
        },
        "mounts": [
            "source=common-utils-vscode,target=/commandhistory,type=volume"
        ],
        "remoteUser": "vscode"
    },
    "oh-my-zsh-vscode": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:2": {
                "installZsh": true,
                "configureZshAsDefaultShell": true,
                "installOhMyZsh": true,
                "username": "vscode",
                "userUid": "1001",
                "userGid": "1001"
            },
            "zsh-history": {
                "username": "vscode"
            }
        },
        "mounts": [
            "source=oh-my-zsh-vscode,target=/commandhistory,type=volume"
        ],
        "remoteUser": "vscode"
    },
    "oh-my-zsh-root": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:2": {
                "installZsh": true,
                "configureZshAsDefaultShell": true,
                "installOhMyZsh": true,
                "username": "root",
                "userUid": "automatic",
                "userGid": "automatic"
            },
            "zsh-history": {
                "username": "root"
            }
        },
        "mounts": [
            "source=oh-my-zsh-root,target=/commandhistory,type=volume"
        ],
        "remoteUser": "root"
    }
}
